

pipeline {
  agent any
    stages {


    stage('lint') {
      steps {
        sh 'tidy -q -e *.html'
      }
    }
    
    
    stage('hadolint') {
      steps {
        sh 'hadolint Dockerfile'
      }
    }
    

    stage('docker and push') {
    
      input{
		message "Press Ok-Proceed to continue"
		submitter "FN"
		parameters {
			string(name:'releaseid', description: 'Relese to be build')
		}

	}
	
      steps {
        
        sh "echo ${releaseid}"
	sh "echo $releaseid"
        
        sh 'tidy -q -e *.html'
	
	        script {
          def customImage = docker.build ("my-image:${releaseid}")
	  docker.withRegistry('https://482389634785.dkr.ecr.us-west-2.amazonaws.com/my-image', credentials:'aws-static') {
	     customImage.push()
	     //docker.image('my-image').push("${releaseid}")
	    }
	  
        }
      }
    }

 
  }
}
