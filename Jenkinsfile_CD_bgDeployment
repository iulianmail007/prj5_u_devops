

pipeline {
  agent any
  stages {
  
  
    stage('input ver_id') {
    
    input{
      message "Press Ok-Proceed to continue"
      submitter "FN"
      parameters {
        string(name:'ver_id', description: 'Relese to be deployed')
		}

	}
    
      steps {
                 sh 'echo "Hello World"'
                 sh '''
                     #!/bin/bash
                     
                     echo $ver_id
                     
                     status=$(kubectl get --no-headers=true service/my-srv-lb  -o custom-columns='SELECTOR:spec.selector.app')
                     echo $status

                     if [ "$status" = "green" ]
                     then
                        echo green
                     fi
                     if [ "$status" = "blue" ]
                     then
                        echo blue
                     fi

                 '''
      }
    }
    
    
    
    stage('Sanity check') {
    steps {
	input "Does the staging environment look ok?"
    }
    }
    
    
    stage('Prod/LB Deployment') {
    steps {

	echo LBs wwill be updated
    }
    }
    
    
  }
}
